<view class="container">
    <view class="mod-filter">
        <view bindtap="bindtapMenuFilter" class="mod-filter-item" style="{{resultSelectedMenuCategoryIdFromSearch?'opacity:0.3;':''}}">
            <view class="mod-filter-item__text {{shouldShowMenuCategoryPanel?'text-active':''}}">
								{{resultSelectedMenuCategoryName}}
						</view>
            <image class="mod-filter-item__arrow" src="{{shouldShowMenuCategoryPanel?'/images/filter-arrow-up.jpg':'/images/filter-arrow-down.png'}}"></image>
        </view>
        <view bindtap="bindtapPriceFilter" class="mod-filter-item">
            <view class="mod-filter-item__text {{shouldShowPriceCategoryPanel?'text-active':''}}">
								{{resultSelectedPriceCategoryName}}
						</view>
            <image class="mod-filter-item__arrow" src="{{shouldShowPriceCategoryPanel?'/images/filter-arrow-up.jpg':'/images/filter-arrow-down.png'}}"></image>
        </view>
        <view bindtap="bindtapOrderFilter" class="mod-filter-item">
            <view class="mod-filter-item__text {{shouldShowOrderPanel?'text-active':''}}">
								{{resultSelectedOrderName}}
						</view>
            <image class="mod-filter-item__arrow" src="{{shouldShowOrderPanel?'/images/filter-arrow-up.jpg':'/images/filter-arrow-down.png'}}"></image>
        </view>
        <view bindtap="bindtapAreaFilter" class="mod-filter-item" style="{{resultSelectedSimilarAreaCategoryId?'opacity:0.3;':''}}">
            <view class="mod-filter-item__text {{shouldShowAreaCategoryPanel?'text-active':''}}">
								{{resultSelectedAreaCategoryName}}
						</view>
            <image class="mod-filter-item__arrow" src="{{shouldShowAreaCategoryPanel?'/images/filter-arrow-up.jpg':'/images/filter-arrow-down.png'}}"></image>
        </view>
    </view>
    <view class="mod-panel">
        <left-right-panel bindleftrightselect="bindAreaCategorySelect" category="{{areaCategory}}" class="{{shouldShowAreaCategoryPanel?'':'hide'}}"></left-right-panel>
        <select-panel bindselect="bindMenuCategorySelect" category="{{menuCategory}}" class="{{shouldShowMenuCategoryPanel?'':'hide'}}"></select-panel>
        <select-panel bindselect="bindPriceCategorySelect" category="{{priceCategory}}" class="{{shouldShowPriceCategoryPanel?'':'hide'}}"></select-panel>
        <order-panel bindselect="bindOrderSelect" class="{{shouldShowOrderPanel?'':'hide'}}" options="{{orderOptions}}" selectedId="{{resultSelectedOrderId}}"></order-panel>
    </view>
    <view class="result-type-tab-placeholder"></view>
    <view class="mod-filter-placehodler"></view>
    <block wx:if="{{similarAreas}}">
        <view class="mod-area-select">
            <block wx:if="{{shouldShowSimilarAreaPanel}}">
                <view catchtap="bindtapSelectedSmlArea" class="mod-area-select-item" data-areaid="{{similarAreas[selectedSimilarAreaIndex].id}}">
                    <view class="mod-item-left">
                        <image class="mod-item-left__image" src="https://res.wx.qq.com/a/fed_upload/e6571a6e-666f-49d2-8292-7766fa530b3a/search-location.png"></image>
                    </view>
                    <view class="mod-item-right">
                        <view class="mod-item-right__area-name">
														{{similarAreas[selectedSimilarAreaIndex].name}}
												</view>
                        <view class="mod-item-right-wrap" wx:if="{{similarAreas.length>1}}">
                            <view class="mod-item-right-wrap__text">其他{{similarAreas.length-1}}家</view>
                            <image class="mod-item-right-wrap__image" src="/images/arrow-up.jpg"></image>
                        </view>
                    </view>
                </view>
                <view catchtap="bindtapSmlArea" class="mod-area-select-item" data-areaid="{{smlArea.id}}" data-index="{{index}}" wx:if="{{smlArea.id!=similarAreas[selectedSimilarAreaIndex].id}}" wx:for="{{similarAreas}}" wx:for-item="smlArea">
                    <view class="mod-item-left"></view>
                    <view class="mod-item-right {{index==similarAreas.length-1?'border0':''}}">
                        <view class="mod-item-right__area-name">{{smlArea.name}}</view>
                    </view>
                </view>
            </block>
            <view catchtap="bindtapSelectedSmlArea" class="mod-area-select-item" data-areaid="{{similarAreas[selectedSimilarAreaIndex].id}}" wx:else>
                <view class="mod-item-left">
                    <image class="mod-item-left__image" src="https://res.wx.qq.com/a/fed_upload/e6571a6e-666f-49d2-8292-7766fa530b3a/search-location.png"></image>
                </view>
                <view class="mod-item-right">
                    <view class="mod-item-right__area-name">
														{{similarAreas[selectedSimilarAreaIndex].name}}
												</view>
                    <view class="mod-item-right-wrap" wx:if="{{similarAreas.length>1}}">
                        <view class="mod-item-right-wrap__text">其他{{similarAreas.length-1}}家</view>
                        <image class="mod-item-right-wrap__image" src="/images/arrow-down.jpg"></image>
                    </view>
                </view>
            </view>
        </view>
        <view class="mod-area-select-placehodler"></view>
    </block>
    <scroll-view class="mod-tag-container" scrollX="true" wx:if="{{tagResults&&tagResults.length}}">
        <view catchtap="bindtapIndexTag" class="mod-tag-card mod-tag-card--short" data-id="{{tag.id}}" data-name="{{tag.name}}" wx:for="{{tagResults}}" wx:for-item="tag">
            <view class="mod-tag-card__title1">{{tag.name}}</view>
        </view>
    </scroll-view>
    <block wx:if="{{isPoiListLoaded}}">
        <view catchtap="onTapPost" class="mod-empty" style="height: {{scrollViewHeight}}px" wx:if="{{!poiList.length}}">
            <image class="mod-empty__image" src="https://res.wx.qq.com/a/fed_upload/988503ed-fe6b-4b5f-8056-4a05ac0b44bd/search-empty.png"></image>
            <view class="mod-empty__text">暂无搜索结果</view>
        </view>
        <scroll-view scrollY bindscrolltolower="bindscrolltolower" id="scrollView" lowerThreshold="500" style="height: {{scrollViewHeight}}px" wx:else>
            <view class="mod-poilist-container">
                <view catchtap="bindtapItem" class="mod-poi-1208 selector-poi" data-id="{{poi.id}}" data-index="{{poiIndex}}" wx:for="{{poiList}}" wx:for-index="poiIndex" wx:for-item="poi" wx:key="unique">
                    <view class="mod-poi-1208__title1-wrap">
                        <view class="mod-poi-1208__title1">
                            <match-text query="{{poi.title2HitWord||query}}" text="{{poi.title1}}"></match-text>
                        </view>
                        <view class="mod-poi-1208__mark" wx:if="{{poi.isMark}}">已想去</view>
                        <view class="mod-poi-1208__distance" wx:if="{{useRealCurrentLocationToGetData}}">
																		{{poi.distanceString2}}
																</view>
                    </view>
                    <view class="mod-poi-1208__title2">
                        <match-text query="{{query}}" text="{{poi.title2}}"></match-text>
                    </view>
                    <view class="mod-poi-1208__title5-wrap" wx:if="{{poi.recommendText.scene===1}}">
                        <image class="mod-poi-1208__title5-image" src="https://res.wx.qq.com/a/fed_upload/1191c3eb-6fc1-4aac-97a1-347caaf208c2/poi-rank.png"></image>
                        <view class="mod-poi-1208__title5-text">{{poi.recommendText.label}}</view>
                    </view>
                    <block wx:else>
                        <view class="mod-poi-1208__title3 {{poi.recommendText.scene===5?'title--red':''}}" wx:if="{{poi.recommendText.label}}">
																		{{poi.recommendText.label}}
																</view>
                    </block>
                    <view class="mod-poi-1208__image-list" wx:if="{{poi.photos.length}}">
                        <image class="mod-poi-1208__image" mode="aspectFill" src="{{photo}}" wx:for="{{poi.photos}}" wx:for-item="photo"></image>
                    </view>
                </view>
            </view>
            <bottom-loading showBottomLoading="{{shouldShowBottomLoading}}"></bottom-loading>
        </scroll-view>
    </block>
    <bottom-loading showBottomLoading="{{shouldShowBottomLoading}}" wx:else></bottom-loading>
</view>
<view catchtap="toFeedBack" class="mod-fb mod-fb_bottom {{isIpx?'mod-fb_ipx':''}}">
		没有找到相关结果，点此反馈
</view>
<view bindtap="bindtapMask" class="mod-mask {{shouldShowMask?'':'hide'}}" style="height: {{maskHeight}}px;"></view>
