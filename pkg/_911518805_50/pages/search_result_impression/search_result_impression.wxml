<view class="container">
    <view class="mod-filter">
        <view bindtap="bindtapMenuFilter" class="mod-filter-item" style="{{resultSelectedMenuCategoryIdFromSearch?'opacity:0.3;':''}}">
            <view class="mod-filter-item__text {{shouldShowMenuCategoryPanel?'text-active':''}}">
								{{resultSelectedMenuCategoryName}}
						</view>
            <image class="mod-filter-item__arrow" src="{{shouldShowMenuCategoryPanel?'/images/filter-arrow-up.jpg':'/images/filter-arrow-down.png'}}"></image>
        </view>
        <view bindtap="bindtapPriceFilter" class="mod-filter-item">
            <view class="mod-filter-item__text {{shouldShowPriceCategoryPanel?'text-active':''}}">
								{{resultSelectedPriceCategoryName}}
						</view>
            <image class="mod-filter-item__arrow" src="{{shouldShowPriceCategoryPanel?'/images/filter-arrow-up.jpg':'/images/filter-arrow-down.png'}}"></image>
        </view>
        <view bindtap="bindtapOrderFilter" class="mod-filter-item">
            <view class="mod-filter-item__text {{shouldShowOrderPanel?'text-active':''}}">
								{{resultSelectedOrderName}}
						</view>
            <image class="mod-filter-item__arrow" src="{{shouldShowOrderPanel?'/images/filter-arrow-up.jpg':'/images/filter-arrow-down.png'}}"></image>
        </view>
        <view bindtap="bindtapAreaFilter" class="mod-filter-item" style="{{resultSelectedSimilarAreaCategoryId?'opacity:0.3;':''}}">
            <view class="mod-filter-item__text {{shouldShowAreaCategoryPanel?'text-active':''}}">
								{{resultSelectedAreaCategoryName}}
						</view>
            <image class="mod-filter-item__arrow" src="{{shouldShowAreaCategoryPanel?'/images/filter-arrow-up.jpg':'/images/filter-arrow-down.png'}}"></image>
        </view>
    </view>
    <view class="mod-panel">
        <left-right-panel bindleftrightselect="bindAreaCategorySelect" category="{{areaCategory}}" class="{{shouldShowAreaCategoryPanel?'':'hide'}}"></left-right-panel>
        <select-panel bindselect="bindMenuCategorySelect" category="{{menuCategory}}" class="{{shouldShowMenuCategoryPanel?'':'hide'}}"></select-panel>
        <select-panel bindselect="bindPriceCategorySelect" category="{{priceCategory}}" class="{{shouldShowPriceCategoryPanel?'':'hide'}}"></select-panel>
        <order-panel bindselect="bindOrderSelect" class="{{shouldShowOrderPanel?'':'hide'}}" options="{{orderOptions}}" selectedId="{{resultSelectedOrderId}}"></order-panel>
    </view>
    <view class="result-type-tab-placeholder"></view>
    <view class="mod-filter-placehodler"></view>
    <block wx:if="{{isInited}}">
        <view class="mod-empty" style="height: {{scrollViewHeight}}px" wx:if="{{!impressionDataList.length}}">
            <image class="mod-empty__image" src="https://res.wx.qq.com/a/fed_upload/988503ed-fe6b-4b5f-8056-4a05ac0b44bd/search-empty.png"></image>
            <view class="mod-empty__text">暂无搜索结果</view>
        </view>
        <scroll-view scrollY bindscrolltolower="bindscrolltolower" id="scrollView" lowerThreshold="500" style="background: white; height: {{scrollViewHeight}}px" wx:else>
            <block wx:for="{{impressionDataList}}" wx:for-item="impression" wx:key="unqiue">
                <view class="impression-cell {{index!==0?'ps-before':''}}"></view>
                <impression-search class="impression-cell" data-index="{{index}}" impressionData="{{impression}}" impressionDataIndex="{{index}}"></impression-search>
            </block>
            <bottom-loading showBottomLoading="{{shouldShowBottomLoading}}"></bottom-loading>
        </scroll-view>
    </block>
    <bottom-loading showBottomLoading="{{shouldShowBottomLoading}}" wx:else></bottom-loading>
</view>
<view bindtap="bindtapMask" class="mod-mask {{shouldShowMask?'':'hide'}}" style="height: {{maskHeight}}px;"></view>
