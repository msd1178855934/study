<view class="container">
    <view>
        <view class="weui-cells__title">选择问题类型</view>
        <view class="weui-cells weui-cells_after-title">
            <radio-group bindchange="bindCheckboxChange">
                <label class="weui-cell weui-check__label" wx:for="{{checkboxItems}}" wx:key="value">
                    <view class="weui-cell__bd">{{item.name}}</view>
                    <checkbox checked="{{item.checked}}" class="weui-check" value="{{item.value}}"></checkbox>
                    <view class="weui-cell__hd weui-check__hd_in-checkbox">
                        <icon class="weui-icon-checkbox_circle" size="23" type="circle" wx:if="{{!item.checked}}"></icon>
                        <icon class="weui-icon-checkbox_success" size="23" type="success" wx:if="{{item.checked}}"></icon>
                    </view>
                </label>
            </radio-group>
        </view>
        <view class="weui-cells__title">问题说明</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea adjustPosition bindinput="bindInputChange" class="weui-textarea" maxlength="200" placeholder="请描述具体问题 不少于2个字" style="height: 5em"></textarea>
                    <view class="weui-textarea-counter">{{commentText.length}}/200</view>
                </view>
            </view>
        </view>
        <view lass="weui-cells weui-cells_after-title">
            <view class="weui-cells__title">上传图片(建议上传门面照、营业执照等辅助说明), 最多选9张图</view>
            <view class="image-uploader">
                <view class="image-item" wx:for="{{uploadedPics}}" wx:for-item="pic" wx:key="id">
                    <view bindtap="bindDeleteImages" class="image-remover" data-index="{{index}}"></view>
                    <image bindtap="bindPreviewImages" data-index="{{index}}" mode="aspectFill" src="{{pic}}"></image>
                </view>
                <view bindtap="bindChooseImages" class="image-item image-adder" wx:if="{{uploadedPics.length<9}}">
                    <view class="image-uploader ps-before"></view>
                </view>
            </view>
        </view>
        <view class="submit-block">
            <button bindtap="bindTapSubmit" class="submit-btn" disabled="{{!isFormComplete}}" type="primary">
        提交
      </button>
        </view>
    </view>
</view>
