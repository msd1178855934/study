<template name="reason-item">
    <view bindtap="bindTapToIndexTag" class="card-item card-item--block card-item--block-{{index}}" data-item="{{item}}" data-reporttype="tag" wx:for="{{reasons}}" wx:key="id">
        <view class="item-content">
            <view class="content-title">{{item.name}}</view>
            <view class="content-subtitle">
          提到了这家店
          <text wx:if="{{item.poiCount>0}}">，共{{item.poiCount}}家店</text>
                <text wx:if="{{item.visitCount>0}}">，{{item.visitCount}}个朋友发过印象</text>
            </view>
        </view>
        <view class="item-image" wx:if="{{item.coverPhoto}}">
            <image class="content-image" mode="aspectFill" src="{{item.coverPhoto.thumbUrl||item.coverPhoto.url}}"></image>
        </view>
    </view>
</template>
