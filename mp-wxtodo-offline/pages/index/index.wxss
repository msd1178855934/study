/* pages/index/index.wxss */
.header {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
}

.header .quick {
    display: flex;
    flex: 1;
    align-items: center;
    border: 1rpx solid #DDD;
    padding: 20rpx;
    color: #9B9B9B;
}

.header .quick .add {
    width: 40rpx;
    margin-right: 10rpx;
    color: #7DE321;
    font-size: 40rpx;
    font-weight: bold;
    line-height: 1em;
}

.header .quick .new-quick {
    flex: 1;
    font-size: 30rpx;
}

.header .new {
    width: 120rpx;
    padding-left: 10rpx;
    font-size: 30rpx;
    color: #7DE321;
}

.todos {
    border: 1rpx solid #DDD;
}

.footer {
    display: flex;
    justify-content: space-between;
    margin: 30rpx 0;
    padding: 0 10rpx;
    font-size: 28rpx;
    color: #9B9B9B;
}